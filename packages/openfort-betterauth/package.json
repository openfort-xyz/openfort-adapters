{
	"name": "@openfort/better-auth",
	"version": "0.0.2",
	"description": "Openfort wallet integration for better-auth with encryption session support",
	"repository": {
		"type": "git",
		"url": "https://github.com/openfort-xyz/openfort-adapters.git",
		"directory": "packages/openfort-betterauth"
	},
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		"import": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"require": {
			"types": "./dist/index.d.cts",
			"require": "./dist/index.cjs"
		}
	},
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"test": "vitest",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"build": "tsup ./src/index.ts --format esm,cjs --dts --clean --sourcemap",
		"dev": "npm run build -- --watch",
		"check": "biome check --write ./src"
	},
	"files": [
		"dist"
	],
	"keywords": [
		"openfort",
		"better-auth",
		"wallet",
		"web3",
		"authentication"
	],
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@openfort/adapter-utils": "workspace:*",
		"@openfort/openfort-node": "^0.6.75",
		"@sindresorhus/tsconfig": "^7.0.0",
		"@types/node": "^20.0.0",
		"better-auth": "^1.3.28",
		"tsup": "^8.5.0",
		"vitest": "^2.1.8"
	},
	"peerDependencies": {
		"@openfort/openfort-node": "^0.6.75",
		"better-auth": "^1.3.9",
		"zod": "^3.24.2 || ^4"
	},
	"dependencies": {}
}
